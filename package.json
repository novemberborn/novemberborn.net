{
  "private": true,
  "name": "novemberborn.net",
  "version": "2.0.0",
  "description": "Behind the scenes of https://novemberborn.net/",
  "scripts": {
    "clean": "rimraf server.js server.js.map lib templates static/style.css static/style.css.map static/browser.js static/browser.js.map node_modules/.cache",
    "prebuild": "npm run clean",
    "build": "npm run build:browser && npm run build:server --",
    "build:browser": "npm run build:css && npm run build:js",
    "build:docker": "./docker.sh",
    "build:css": "postcss -o static/style.css -m file -c postcss.json src/style.css",
    "build:js": "uglifyjs -c -m -o static/browser.js --source-map static/browser.js.map --source-map-url ./browser.js.map --source-map-include-sources src/browser.js",
    "build:server": "babel src --ignore src/browser.js --out-dir ./ --source-maps",
    "build:watch": "nodemon -w content -w src -e 'md css' -x 'npm run build -- --watch'",
    "docker": "docker run --rm --name=site -p 443:8443 -e PFX_BASE64=$(base64 -i https.p12) --env-file=.env novemberborn-dot-net | bunyan",
    "nodemon": "nodemon | bunyan",
    "test": "standard && stylelint src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/novemberborn.net.git"
  },
  "bugs": {
    "url": "https://github.com/novemberborn/novemberborn.net/issues"
  },
  "homepage": "https://github.com/novemberborn/novemberborn.net#readme",
  "license": "UNLICENSED",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-cli": "^6.4.5",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-files": "^0.1.0",
    "babel-plugin-handlebars-inline-precompile": "^2.1.0",
    "babel-plugin-import-glob": "^1.0.0",
    "babel-plugin-transform-async-to-generator": "^6.4.6",
    "babel-plugin-transform-es2015-destructuring": "^6.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.4.5",
    "babel-plugin-transform-es2015-parameters": "^6.4.5",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-strict-mode": "^6.3.13",
    "cssnano": "^3.4.0",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.4.0",
    "postcss-nested": "^1.0.0",
    "postcss-normalize": "^0.1.2",
    "rimraf": "^2.5.1",
    "standard": "^5.4.1",
    "stylelint": "^4.1.0",
    "stylelint-config-standard": "^2.0.0",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "bunyan": "^1.5.1",
    "convert-hrtime": "^1.0.0",
    "dotenv": "^2.0.0",
    "find-cache-dir": "^0.1.1",
    "handlebars": "^4.0.5",
    "mkdirp": "^0.5.1",
    "node-forge": "^0.6.38",
    "raven": "^0.10.0",
    "remarkable": "^1.6.1",
    "source-map-support": "^0.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
