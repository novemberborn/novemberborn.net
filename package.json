{
  "private": true,
  "name": "@novemberborn/website",
  "version": "2.0.0",
  "description": "Behind the scenes of https://novemberborn.net/",
  "scripts": {
    "clean": "scripty",
    "prebuild": "npm run clean",
    "build": "scripty",
    "build:browser": "scripty",
    "build:docker": "scripty",
    "build:css": "scripty",
    "build:js": "scripty",
    "build:server": "scripty",
    "build:watch": "SCRIPTY_PARALLEL=true scripty",
    "docker": "scripty",
    "list-content-routes": "scripty",
    "server": "scripty",
    "test": "scripty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/novemberborn.net.git"
  },
  "bugs": {
    "url": "https://github.com/novemberborn/novemberborn.net/issues"
  },
  "homepage": "https://github.com/novemberborn/novemberborn.net#readme",
  "license": "UNLICENSED",
  "devDependencies": {
    "@novemberborn/as-i-preach": "^11.0.0",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-files": "^1.0.0",
    "babel-plugin-handlebars-inline-precompile": "^2.1.0",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "cssnano": "^3.10.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.18.4",
    "postcss-cli": "^4.1.0",
    "postcss-nested": "^2.0.4",
    "postcss-normalize": "^4.0.0",
    "remarkable": "^1.7.1",
    "scripty": "^1.7.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "cloudflare-origin-pull": "^1.0.1",
    "convert-hrtime": "^2.0.0",
    "dotenv": "^4.0.0",
    "handlebars": "^4.0.12",
    "raven": "^0.12.3",
    "source-map-support": "^0.4.15"
  },
  "as-i-preach": {
    "fakeDependencies": [
      "^glob:",
      "^files:",
      "^handlebars-inline-precompile$"
    ]
  },
  "babel": {
    "compact": false,
    "plugins": [
      "handlebars-inline-precompile",
      "files",
      "import-glob",
      "transform-es2015-modules-commonjs",
      "transform-strict-mode"
    ]
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-normalize": {},
      "postcss-nested": {},
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      },
      "cssnano": {
        "autoprefixer": false,
        "discardComments": {
          "removeAll": true
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "standard-engine": "@novemberborn/as-i-preach"
}
