{
  "private": true,
  "name": "novemberborn.net",
  "version": "2.0.0",
  "description": "Behind the scenes of https://novemberborn.net/",
  "scripts": {
    "clean": "rimraf server.js server.js.map lib scripts templates static/style.css static/style.css.map static/browser.js static/browser.js.map node_modules/.cache",
    "prebuild": "npm run clean",
    "build": "npm run build:browser && npm run build:server --",
    "build:browser": "npm run build:css && npm run build:js",
    "build:docker": "./docker.sh",
    "build:css": "postcss -o static/style.css -m file -c postcss.json src/style.css",
    "build:js": "uglifyjs -c -m -o static/browser.js --source-map static/browser.js.map --source-map-url ./browser.js.map --source-map-include-sources src/browser.js",
    "build:server": "babel src --ignore src/browser.js --out-dir ./ --source-maps",
    "build:watch": "parallelshell \"nodemon -w src/browser.js -x 'npm run build:js'\" \"nodemon -w src/style.css -x 'npm run build:css'\" \"nodemon -w content -w static -e css,css.map,ico,jpg,js,js.map,md,png,svg -x 'npm run build:server -- --watch'\"",
    "docker": "docker run --rm --name=site -p 443:8443 -e ANY_CLIENT=true -e CERT_NAME=development --env-file=.env novemberborn-dot-net | bunyan",
    "list-content-routes": "node scripts/list-content-routes",
    "nodemon": "nodemon | bunyan",
    "test": "as-i-preach && stylelint src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/novemberborn.net.git"
  },
  "bugs": {
    "url": "https://github.com/novemberborn/novemberborn.net/issues"
  },
  "homepage": "https://github.com/novemberborn/novemberborn.net#readme",
  "license": "UNLICENSED",
  "devDependencies": {
    "@novemberborn/as-i-preach": "^2.0.1",
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.5.1",
    "babel-plugin-files": "^1.0.0",
    "babel-plugin-handlebars-inline-precompile": "^2.1.0",
    "babel-plugin-import-glob": "^1.0.1",
    "babel-plugin-transform-async-to-generator": "^6.5.0",
    "babel-plugin-transform-es2015-destructuring": "^6.5.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.5.2",
    "babel-plugin-transform-es2015-parameters": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.5.0",
    "babel-plugin-transform-strict-mode": "^6.5.2",
    "cssnano": "^3.5.2",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "postcss-nested": "^1.0.0",
    "postcss-normalize": "^0.2.0",
    "rimraf": "^2.5.2",
    "stylelint": "^5.4.0",
    "stylelint-config-standard": "^5.0.0",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "bunyan": "^1.7.0",
    "cloudflare-origin-pull": "^1.0.1",
    "convert-hrtime": "^1.0.0",
    "dotenv": "^2.0.0",
    "find-cache-dir": "^0.1.1",
    "handlebars": "^4.0.5",
    "mkdirp": "^0.5.1",
    "raven": "^0.10.0",
    "remarkable": "^1.6.2",
    "source-map-support": "^0.4.0"
  },
  "babel": {
    "compact": false,
    "plugins": [
      "handlebars-inline-precompile",
      "import-glob",
      "files",
      "transform-async-to-generator",
      "transform-es2015-destructuring",
      "transform-es2015-modules-commonjs",
      "transform-es2015-parameters",
      "transform-object-rest-spread",
      "transform-strict-mode"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
