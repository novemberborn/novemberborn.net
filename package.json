{
  "private": true,
  "name": "novemberborn.net",
  "version": "2.0.0",
  "description": "Behind the scenes of https://novemberborn.net/",
  "scripts": {
    "clean": "rimraf server.js server.js.map lib templates static/style.css static/style.css.map",
    "prebuild": "npm run clean",
    "build": "npm run build:css && babel src --out-dir ./ --source-maps",
    "build:css": "postcss -o static/style.css -m file -c postcss.json src/style.css",
    "build:watch": "nodemon -w content -w src -e 'md css' -x 'npm run build:css && babel src --out-dir ./ --source-maps --watch'",
    "nodemon": "nodemon",
    "test": "standard && stylelint src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novemberborn/novemberborn.net.git"
  },
  "bugs": {
    "url": "https://github.com/novemberborn/novemberborn.net/issues"
  },
  "homepage": "https://github.com/novemberborn/novemberborn.net#readme",
  "license": "UNLICENSED",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-files": "^0.1.0",
    "babel-plugin-handlebars-inline-precompile": "^2.1.0",
    "babel-plugin-import-glob": "^1.0.0",
    "babel-plugin-transform-async-to-generator": "^6.4.0",
    "babel-plugin-transform-es2015-destructuring": "^6.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.4.0",
    "babel-plugin-transform-strict-mode": "^6.3.13",
    "cssnano": "^3.4.0",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.4.0",
    "postcss-normalize": "^0.1.2",
    "rimraf": "^2.5.0",
    "standard": "^5.4.1",
    "stylelint": "^3.2.3",
    "stylelint-config-standard": "^0.2.0"
  },
  "dependencies": {
    "dotenv": "^1.2.0",
    "find-cache-dir": "^0.1.1",
    "handlebars": "^4.0.5",
    "mkdirp": "^0.5.1",
    "remarkable": "^1.6.1",
    "source-map-support": "^0.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
